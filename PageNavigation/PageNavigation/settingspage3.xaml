<Page x:Class="PageNavigation.settingspage3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PageNavigation"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="settingspage3">

    <Grid Margin="0,0,-158,0" Background="#FFE8B5B5">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,40,0,85" TextWrapping="Wrap" VerticalAlignment="Stretch" Background="#FFE6E7E8" ><Run Text="1. Start Outlook."/><LineBreak/><Run Text="2. Click the File tab."/><LineBreak/><Run Text="3. In the Info category, click Account Settings, and then click Account Settings in the dropdown."/><LineBreak/><Run Text="4. On the Email tab, click New."/><LineBreak/><Run Text="5. In the Add New Account dialog box, to configure the new email account automatically, configure the following settings in the Email Account section under Auto Account Setup."/></TextBlock>
        <Label x:Name="label" Content="Settings_Page #3" HorizontalAlignment="Left" Margin="10,14,0,0" VerticalAlignment="Top" Width="99"/>
        <Button x:Name="proceed" Content="Proceed" HorizontalAlignment="Left" Margin="10,0,0,58" VerticalAlignment="Bottom" Width="75" Click="proceed_Click"/>

    </Grid>
</Page>
