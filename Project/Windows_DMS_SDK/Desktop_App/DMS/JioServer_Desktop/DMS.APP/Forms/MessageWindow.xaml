<Controls:MetroWindow x:Class="DMS.APP.Forms.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" 
        WindowStartupLocation="CenterScreen" BorderBrush="Gray" BorderThickness="1"
        Title="Jio Server" Name="MessageForm" Height="250" Width="350" Loaded="Window_Loaded">
    <Grid>
        <DockPanel Margin="0,27,0,0">
            <Image Name="imgMsgIcon" Source="..\Images\info.jpg" Width="55" Height="55" VerticalAlignment="Top"></Image>
            <ScrollViewer Margin="0,10,0,61">
                <Label Name="lbMessage" Content="Message" VerticalAlignment="Center"></Label>
            </ScrollViewer>

        </DockPanel>
        <DockPanel Background="LightGray" Height="59" VerticalAlignment="Bottom">
            <Button x:Name="btnOk" Width="100" Content="Ok" Height="25" Click="btnOk_Click" HorizontalAlignment="Center" BorderBrush="Black"/>
            <!--<Button Name="btnCancle" Width="120" Content="Cancle" Height="35" Click="btnCancle_Click"></Button>-->
        </DockPanel>
    </Grid>
</Controls:MetroWindow>
