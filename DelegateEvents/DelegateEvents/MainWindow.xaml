<Window x:Class="DelegateEvents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DelegateEvents"
        mc:Ignorable="d"
        Title="Settings_Page" Height="350" Width="525" Background="#FFB4DAEC">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="300" Margin="10,10,0,0" VerticalAlignment="Top" Width="497">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="97*"/>
            </Grid.RowDefinitions>
            <Image x:Name="Image" Source="settings.jpg" HorizontalAlignment="Left" Height="70" Margin="10,0,0,0" VerticalAlignment="Top" Width="80" MouseDown="Image_Click" RenderTransformOrigin="0.282,0.349" Grid.RowSpan="2"/>
            <Button x:Name="button" Content="Previous" HorizontalAlignment="Right" Margin="0,0,104,0" Grid.Row="1" VerticalAlignment="Bottom" Width="75"/>
            <Button x:Name="button1" Content="Next" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Row="1" VerticalAlignment="Bottom" Width="75"/>
        </Grid>

    </Grid>
</Window>
